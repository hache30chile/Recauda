@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center mt-5">
                <div class="error mx-auto" data-text="403">
                    <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                </div>
                <h1 class="display-1">403</h1>
                <p class="fs-3"><span class="text-danger">¡Ups!</span> Acceso Denegado</p>
                <p class="lead">No tienes permisos para acceder a este recurso.</p>

                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Usuario:</strong> @(User.Identity?.Name ?? "Invitado")<br>
                    <strong>Estado:</strong> @(User.Identity?.IsAuthenticated == true ? "Autenticado" : "No autenticado")
                </div>

                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Volver al Dashboard
                </a>
            </div>
        </div>
    </div>
</div>