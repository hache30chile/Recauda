@model Recauda.Models.VContribuyente

@{
    ViewData["Title"] = "Detalles del Contribuyente";
}

<h1 class="mt-4">@ViewData["Title"]</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
    <li class="breadcrumb-item"><a asp-action="Index">Contribuyentes</a></li>
    <li class="breadcrumb-item active">Detalles</li>
</ol>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-info-circle me-1"></i>
                Información Detallada del Contribuyente
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="text-center">
                            <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center"
                                 style="width: 80px; height: 80px;">
                                <i class="fas fa-user fa-2x text-white"></i>
                            </div>
                            <div class="mt-2">
                                @if (Model.con_activo)
                                {
                                    <span class="badge bg-success fs-6">ACTIVO</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger fs-6">INACTIVO</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h3 class="mb-2">@Model.per_nombre_completo</h3>
                        <p class="text-muted mb-4">ID: @Model.Id | RUT: @Model.per_rut_completo</p>

                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">INFORMACIÓN PERSONAL</h6>
                                <table class="table table-borderless table-sm">
                                    <tr>
                                        <td><strong>RUT:</strong></td>
                                        <td>@Model.per_rut_completo</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Nombre:</strong></td>
                                        <td>@Model.per_nombre_completo</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">INFORMACIÓN DEL APORTE</h6>
                                <table class="table table-borderless table-sm">
                                    <tr>
                                        <td><strong>Valor:</strong></td>
                                        <td><span class="text-success fw-bold">$@Model.con_valor_aporte.ToString("N0")</span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Periodicidad:</strong></td>
                                        <td>Mensual</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Día del Cargo:</strong></td>
                                        <td>@Model.con_dia_del_cargo</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información adicional en cards -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card bg-light">
                            <div class="card-header">
                                <i class="fas fa-calendar"></i> Fechas
                            </div>
                            <div class="card-body">
                                <table class="table table-borderless table-sm mb-0">
                                    <tr>
                                        <td><strong>Fecha Inicio:</strong></td>
                                        <td>@Model.con_fecha_inicio.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Fecha Fin:</strong></td>
                                        <td>
                                            @if (Model.con_fecha_fin.HasValue)
                                            {
                                                @Model.con_fecha_fin.Value.ToString("dd/MM/yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Sin fecha fin</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Fecha Registro:</strong></td>
                                        <td>@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card bg-light">
                            <div class="card-header">
                                <i class="fas fa-users-cog"></i> Asignaciones
                            </div>
                            <div class="card-body">
                                <table class="table table-borderless table-sm mb-0">
                                    <tr>
                                        <td><strong>Compañía:</strong></td>
                                        <td>@Model.com_nombre</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Recaudador ID:</strong></td>
                                        <td>@Model.rec_id</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Motivo de Cobro:</strong></td>
                                        <td>@Model.mdc_nombre</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estadísticas adicionales -->
                <div class="row">
                    <div class="col-12">
                        <div class="card bg-info text-white">
                            <div class="card-header">
                                <i class="fas fa-chart-line"></i> Resumen de Aportes
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-md-3">
                                        <h4>$@Model.con_valor_aporte.ToString("N0")</h4>
                                        <small>Valor mensual</small>
                                    </div>
                                    <div class="col-md-3">
                                        <h4>Mensual</h4>
                                        <small>Periodicidad</small>
                                    </div>
                                    <div class="col-md-3">
                                        <h4>Día @Model.con_dia_del_cargo</h4>
                                        <small>Día del cargo</small>
                                    </div>
                                    <div class="col-md-3">
                                        <h4>$@((Model.con_valor_aporte * 12).ToString("N0"))</h4>
                                        <small>Total anual</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-cogs me-1"></i>
                Acciones Disponibles
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Contribuyente
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Eliminar Contribuyente
                    </a>
                    <hr>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </div>
        </div>

        <!-- Card de estadísticas -->
        <div class="card mt-3">
            <div class="card-header">
                <i class="fas fa-chart-bar me-1"></i>
                Información Adicional
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">ESTADO DEL CONTRIBUYENTE</small>
                    @if (Model.con_activo)
                    {
                        <div class="alert alert-success mb-2">
                            <i class="fas fa-check-circle"></i> Contribuyente Activo
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger mb-2">
                            <i class="fas fa-times-circle"></i> Contribuyente Inactivo
                        </div>
                    }
                </div>

                <div class="mb-3">
                    <small class="text-muted">TIEMPO COMO CONTRIBUYENTE</small>
                    <p class="mb-0">
                        @{
                            var diasTranscurridos = (DateTime.Now - Model.con_fecha_inicio).Days;
                            var mesesTranscurridos = diasTranscurridos / 30;
                        }
                        @mesesTranscurridos meses (@diasTranscurridos días)
                    </p>
                </div>

                @if (Model.con_fecha_fin.HasValue)
                {
                    <div class="mb-3">
                        <small class="text-muted">DÍAS RESTANTES</small>
                        @{
                            var diasRestantes = (Model.con_fecha_fin.Value - DateTime.Now).Days;
                        }
                        <p class="mb-0 @(diasRestantes < 30 ? "text-warning" : "text-success")">
                            @diasRestantes días
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>