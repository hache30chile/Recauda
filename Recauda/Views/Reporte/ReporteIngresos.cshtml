@using Recauda.Interfaces
@{
    ViewData["Title"] = "Reporte de Ingresos";
}

<h1 class="mt-4">@ViewData["Title"]</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
    <li class="breadcrumb-item">Reportes</li>
    <li class="breadcrumb-item active">Reporte de Ingresos</li>
</ol>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle"></i>
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filtros del Reporte -->
<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-filter me-1"></i>
                Filtros de Búsqueda
            </div>
            <div class="card-body">
                <form asp-action="ReporteIngresos" method="post" id="formFiltros">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="companiaId" class="form-label">
                                <i class="fas fa-building"></i> Compañía
                            </label>
                            <select name="companiaId" id="companiaId" asp-items="ViewBag.Companias" class="form-select">
                                <option value="">-- Todas las Compañías --</option>
                            </select>
                            <small class="form-text text-muted">
                                Opcional: Filtre por una compañía específica
                            </small>
                        </div>

                        <div class="col-md-4">
                            <label for="fechaInicio" class="form-label">
                                <i class="fas fa-calendar-alt"></i> Fecha Inicio
                            </label>
                            <input type="date"
                                   class="form-control"
                                   id="fechaInicio"
                                   name="fechaInicio"
                                   value="@(ViewBag.FechaInicio != null ? ((DateTime)ViewBag.FechaInicio).ToString("yyyy-MM-dd") : "")" />
                            <small class="form-text text-muted">
                                Opcional: Deje vacío para incluir desde el inicio
                            </small>
                        </div>

                        <div class="col-md-4">
                            <label for="fechaFin" class="form-label">
                                <i class="fas fa-calendar-alt"></i> Fecha Fin
                            </label>
                            <input type="date"
                                   class="form-control"
                                   id="fechaFin"
                                   name="fechaFin"
                                   value="@(ViewBag.FechaFin != null ? ((DateTime)ViewBag.FechaFin).ToString("yyyy-MM-dd") : "")" />
                            <small class="form-text text-muted">
                                Opcional: Deje vacío para incluir hasta hoy
                            </small>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Generar Reporte
                            </button>
                            <button type="button" class="btn btn-secondary" id="btnLimpiarFiltros">
                                <i class="fas fa-eraser"></i> Limpiar Filtros
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Resumen de Ingresos -->
@if (ViewBag.Resumen != null)
{
    var resumen = (ResumenIngresos)ViewBag.Resumen;

    <div class="row mb-4">
        <div class="col-xl-4 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h4 class="mb-0">@resumen.TotalPagos</h4>
                    <small>Total de Pagos</small>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small"><i class="fas fa-receipt"></i></span>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h4 class="mb-0">$@resumen.TotalIngresos.ToString("N0")</h4>
                    <small>Total Ingresos</small>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small"><i class="fas fa-dollar-sign"></i></span>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <h6 class="mb-0">Mayor: $@resumen.IngresoMayor.ToString("N0")</h6>
                    <h6 class="mb-0">Menor: $@resumen.IngresoMenor.ToString("N0")</h6>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small"><i class="fas fa-balance-scale"></i></span>
                </div>
            </div>
        </div>
    </div>

    @if (resumen.IngresosPorCompania.Any())
    {
        <div class="row mb-4">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-chart-pie me-1"></i>
                        Ingresos por Compañía
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Compañía</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in resumen.IngresosPorCompania.OrderByDescending(x => x.Value))
                                {
                                    <tr>
                                        <td>@item.Key</td>
                                        <td class="text-end fw-bold">$@item.Value.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-chart-bar me-1"></i>
                        Ingresos por Mes
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Mes</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in resumen.IngresosPorMes)
                                {
                                    <tr>
                                        <td>@item.Key</td>
                                        <td class="text-end fw-bold">$@item.Value.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
}

<!-- Detalle de Ingresos -->
@if (ViewBag.Ingresos != null)
{
    var ingresos = (List<ReporteIngreso>)ViewBag.Ingresos;

    if (ingresos.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-table me-1"></i>
                            Detalle de Ingresos
                            <span class="badge bg-primary ms-2">@ingresos.Count registros</span>
                        </div>
                        <div>
                            <form asp-action="ExportarReporteExcel" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="companiaId" value="@ViewBag.CompaniaSeleccionada" />
                                <input type="hidden" name="fechaInicio" value="@(ViewBag.FechaInicio != null ? ((DateTime)ViewBag.FechaInicio).ToString("yyyy-MM-dd") : "")" />
                                <input type="hidden" name="fechaFin" value="@(ViewBag.FechaFin != null ? ((DateTime)ViewBag.FechaFin).ToString("yyyy-MM-dd") : "")" />
                                <button type="submit" class="btn btn-success btn-sm">
                                    <i class="fas fa-file-excel"></i> Exportar a Excel
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tablaIngresos">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Fecha Pago</th>
                                        <th>Contribuyente</th>
                                        <th>RUT</th>
                                        <th>Compañía</th>
                                        <th>Motivo</th>
                                        <th>Período</th>
                                        <th>Valor Pagado</th>
                                        <th>Recaudador</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ingreso in ingresos)
                                    {
                                        <tr>
                                            <td>@ingreso.FechaPago.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@ingreso.NombreContribuyente</td>
                                            <td>@ingreso.RutFormateado</td>
                                            <td>@ingreso.NombreCompania</td>
                                            <td>@ingreso.MotivoCobro</td>
                                            <td>@ingreso.PeriodoCobro</td>
                                            <td class="fw-bold text-success">$@ingreso.ValorPagado.ToString("N0")</td>
                                            <td>@ingreso.NombreRecaudador</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="6" class="text-end fw-bold">TOTAL:</td>
                                        <td class="fw-bold text-success fs-5">$@ingresos.Sum(x => x.ValorPagado).ToString("N0")</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function() {
            // Preseleccionar compañía si viene en el ViewBag
        @if (ViewBag.CompaniaSeleccionada != null)
        {
            <text>
                        $('#companiaId').val('@ViewBag.CompaniaSeleccionada');
            </text>
        }

            // Inicializar DataTable si existe la tabla
            if ($('#tablaIngresos').length > 0) {
                $('#tablaIngresos').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
                    },
                    order: [[0, 'desc']], // Ordenar por fecha descendente
                    pageLength: 25,
                    responsive: true,
                    dom: 'Bfrtip',
                    buttons: []
                });
            }

            // Limpiar filtros
            $('#btnLimpiarFiltros').on('click', function() {
                $('#companiaId').val('');
                $('#fechaInicio').val('');
                $('#fechaFin').val('');
            });

            // Validación de fechas
            $('#formFiltros').on('submit', function(e) {
                var fechaInicio = $('#fechaInicio').val();
                var fechaFin = $('#fechaFin').val();

                if (fechaInicio && fechaFin) {
                    var inicio = new Date(fechaInicio);
                    var fin = new Date(fechaFin);

                    if (inicio > fin) {
                        e.preventDefault();
                        alert('La fecha de inicio no puede ser mayor a la fecha de fin.');
                        return false;
                    }
                }
            });
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
}